fastlane_version "2.89.0"

default_platform :ios

platform :ios do

  desc "Release a new version of WhatsNewKit"
  lane :release do |options|
    ensure_git_status_clean
    ensure_git_branch(branch: 'master')
    test
    version = options[:version]
    increment(version: version)
    add_git_tag(tag: version)
    push_git_tags()
    push_to_git_remote()
    pod_push()
  end

  desc "Increment Version"
    lane :increment do |options|
    version = options[:version]
    version_bump_podspec(
      path: "WhatsNewKit.podspec", 
      version_number: version
    )
    set_info_plist_value(
      path: "Configs/WhatsNewKit.plist", 
      key: "CFBundleShortVersionString", 
      value: version
    )
    set_info_plist_value(
      path: "Configs/WhatsNewKitTests.plist", 
      key: "CFBundleShortVersionString", 
      value: version
    )
    set_info_plist_value(
      path: "Example/Resources/Info.plist", 
      key: "CFBundleShortVersionString", 
      value: version
    )
    git_commit(
        path: [
          "WhatsNewKit.podspec", 
          "Configs/WhatsNewKit.plist", 
          "Configs/WhatsNewKitTests.plist", 
          "Example/Resources/Info.plist"
        ],
        message: "WhatsNewKit Version #{version} ðŸš€"
    )
  end

  desc "Runs Tests"
  lane :test do
    carthage(command: "build", no_skip_current: true, cache_builds: true)
    pod_lib_lint
    scan(
      project: "WhatsNewKit.xcodeproj",
      scheme: "WhatsNewKit-iOS",
      clean: true,
      code_coverage: true
    )
  end

  desc "Runs coverage"
  lane :coverage do
    slather(
      proj: "WhatsNewKit.xcodeproj",
      scheme: "WhatsNewKit-iOS",
      travis: true,
      cobertura_xml: true,
      ignore: ["Tests/*"]
    )
  end

end
